@import '_settings'

@font-face
    font-family: 'Proxima Nova';
    src: url('/css/proximanova/ProximaNova-Regular.otf');

@font-face
    font-family: 'Proxima Nova Bold';
    src: url('/css/proximanova/ProximaNova-Bold.otf');

normalize-css()
base()

/* general */

body
    font-family: $font-stack
    font-size: $font-size
    min-height: $desktop-min-height

    ::selection
        background: $highlight-color

.spacer-50
    height: 50%
    position relative

/* menu */

.menu-icon
    width 50px; height 50px
    position fixed
    top 20px; left 20px
    background $spark-yellow
    border-radius 1px
    box-shadow 3px 3px 5px 0px rgba(0,0,0,0.30)
    display none
    z-index 100

    :hover
        cursor: pointer

    .hamburger
        &:before
            content '\2630'
            position absolute
            top 0; right 0; bottom 0; left 0
            color: white
            font-size: 34px
            text-align: center

.menu
    width: $menu-width
    min-height: $desktop-min-height
    position: fixed
    top: 0; bottom: 0; left: 0
    background: $spark-black
    box-shadow: 3px 3px 5px 0px rgba(0,0,0,0.25)
    z-index: 99

    noselect()

    img
        width: $menu-width - $menu-padding-lr*2
        position: absolute
        top: $menu-padding-tb; right: $menu-padding-lr; left: $menu-padding-lr

    .nav
        height: 350px // approx. to enable verticle centering
        margin: auto
        position: absolute
        top: 0; bottom: 0

        ul
            width: 100%
            margin: 0; padding: 0
            list-style: none

            li
                width: $menu-width - $menu-padding-lr*2
                margin: 0; padding: 24px $menu-padding-lr 20px $menu-padding-lr
                font-size: 17px; font-weight: 600
                text-align: center; text-transform: uppercase

                content-box()

                &.selected
                    background: #222

                a
                    text-decoration: none
                    color: white

                :hover
                    color: $spark-yellow

    .sm
        width: $menu-width - $menu-padding-lr*2
        right: $menu-padding-lr; bottom: $menu-padding-tb; left: $menu-padding-lr
        position: absolute

        ul
            width: 100%
            margin: 0; padding: 0
            list-style: none

            li
                width: 100%
                margin: 0; padding: 0
                text-align: center

                a
                    text-decoration: none

                    img
                        width: 38px; height: 38px
                        top: 0; left: 0
                        padding-top: 4px
                        position: relative

/* content */

.content
    min-height: $desktop-min-height
    position absolute
    top: 0; right: 0; bottom: 0; left: $menu-width
    z-index 1

/* media queries */

@media only screen and (max-width: $mobile-bp-lg)
    body
        min-height $mobile-min-height

    .menu-icon
        display block
        // background none
        // box-shadow none

        .hamburger

            // &:before
            //     content '\00D7'
            //     font-size 54px
            //     font-weight bold

    .menu
        width 100%
        min-height 0
        position fixed
        top 0; right 0; bottom 0; left 0
        background $spark-black-transparent
        box-shadow none
        display none /* TOGGLE */

        .nav
            width 100%; height $menu-item-height-mobile * 4
            padding 0

            ul
                width 100%; height 100%

                li
                    width 100%; height $menu-item-height-mobile
                    margin 0; padding 0
                    line-height $menu-item-height-mobile
                    font-size 28px
                    letter-spacing 2px

    .content
        left 0
        min-height $mobile-min-height

    .logo, .sm
        display: none
